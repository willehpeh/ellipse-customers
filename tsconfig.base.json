{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ellipse-contacts/ellipse-contacts-application": [
        "libs/ellipse-contacts-core/application/src/index.ts"
      ],
      "@ellipse-contacts/ellipse-contacts-domain": [
        "libs/ellipse-contacts-core/domain/src/index.ts"
      ],
      "@ellipse-contacts/ellipse-contacts-infrastructure": [
        "libs/ellipse-contacts-infrastructure/infrastructure/src/index.ts"
      ],
      "@ellipse-contacts/ellipse-contacts-persistence": [
        "libs/ellipse-contacts-infrastructure/persistence/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
